#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    default_album_art_path: None,
    show_song_table_header: true,
    draw_borders: true,
    format_tag_separator: " | ",
    browser_column_widths: [20, 38, 42],
    background_color: "#eccab0",
    text_color: "#0c0808",
    header_background_color: "#eccab0",
    modal_background_color: "#eccab0",
    modal_backdrop: false,
    preview_label_style: (fg: "#000000", bg: "#eccab0"),
    preview_metadata_group_style: (fg: "#000000", bg: "#eccab0", modifiers: "Bold"),
    tab_bar: (
        enabled: true,
        active_style: (fg: "#fdfdfd", bg: "#090909", modifiers: "Bold"),
        inactive_style: (fg: "#351f16", bg: "#eccab0"),
    ),
    highlighted_item_style: (fg: "#fdfdfd", bg: "#090909", modifiers: "Bold"),
    current_item_style: (fg: "#fdfdfd", bg: "#090909", modifiers: "Bold"),
    borders_style: (fg: "#886b54"),
    highlight_border_style: (fg: "#886b54"),
    symbols: (
        song: "",
        dir: "",
        playlist: "P",
        marker: "M",
        ellipsis: "...",
        song_style: None,
        dir_style: None,
        playlist_style: None,
    ),
    level_styles: (
        info: (fg: "#d0d0d0", bg: "#eccab0"),
        warn: (fg: "#f0c674", bg: "#eccab0"),
        error: (fg: "#cc6666", bg: "#eccab0"),
        debug: (fg: "#b5bd68", bg: "#eccab0"),
        trace: (fg: "#b294bb", bg: "#eccab0"),
    ),
    progress_bar: (
        symbols: ["[", "=", ">", " ", "]"],
        track_style: (fg: "#886b54", bg: "#eccab0"),
        elapsed_style: (fg: "#090909", bg: "#eccab0"),
        thumb_style: (fg: "#886b54", bg: "#eccab0"),
    ),
    scrollbar: (
        symbols: ["│", "█", "▲", "▼"],
        track_style: (fg: "#886b54", bg: "#eccab0"),
        ends_style: (fg: "#886b54", bg: "#eccab0"),
        thumb_style: (fg: "#886b54", bg: "#eccab0"),
    ),

    song_table_format: [
        (
            prop: (kind: Property(Artist),
                default: (kind: Text("Unknown"))
            ),
            width: "20%",
        ),
        (
            prop: (kind: Property(Title),
                default: (kind: Text("Unknown"))
            ),
            width: "35%",
        ),
        (
            // Keep Album column styling neutral so row-level styles (e.g., playing-not-selected
            // foreground) can apply uniformly across all columns. Content inherits the row/table
            // style without forcing its own fg/bg here.
            prop: (kind: Property(Album),
                default: (kind: Text("Unknown Album"))
            ),
            width: "30%",
        ),
        (
            prop: (kind: Property(Duration),
                default: (kind: Text("-"))
            ),
            width: "15%",
            alignment: Right,
        ),
    ],
    components: {},
    layout: Split(
        direction: Vertical,
        panes: [
            (
                pane: Pane(Header),
                size: "2",
            ),
            (
                pane: Pane(Tabs),
                size: "3",
            ),
            (
                pane: Pane(TabContent),
                size: "100%",
            ),
            (
                pane: Pane(ProgressBar),
                size: "1",
            ),
        ],
    ),
    header: (
        rows: [
            (
                left: [
                    (kind: Text("["), style: (fg: "#000000", modifiers: "Bold")),
                    (kind: Property(Status(StateV2(playing_label: "Playing", paused_label: "Paused", stopped_label: "Stopped"))), style: (fg: "#000000", modifiers: "Bold")),
                    (kind: Text("]"), style: (fg: "#000000", modifiers: "Bold"))
                ],
                center: [
                    (kind: Property(Song(Title)), style: (modifiers: "Bold"),
                        default: (kind: Text("No Song"), style: (modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Property(Widget(ScanStatus)), style: (fg: "#0c0808")),
                    (kind: Property(Widget(Volume)), style: (fg: "#0c0808"))
                ]
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed))),
                    (kind: Text(" / ")),
                    (kind: Property(Status(Duration))),
                    (kind: Text(" (")),
                    (kind: Property(Status(Bitrate))),
                    (kind: Text(" kbps)"))
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "#000000", modifiers: "Bold"),
                        default: (kind: Text("Unknown"), style: (fg: "#000000", modifiers: "Bold"))
                    ),
                    (kind: Text(" - ")), 
                    (kind: Property(Song(Album)),
                        default: (kind: Text("Unknown Album"))
                    )
                ],
                right: [
                    (
                        kind: Property(Widget(States(
                            active_style: (fg: "#0c0808", modifiers: "Bold"),
                            separator_style: (fg: "#886b54")))
                        ),
                        style: (fg: "#886b54")
                    ),
                ]
            ),
        ],
    ),
    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)),
                (kind: Text(" ")), 
            ])
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")), 
                (kind: Property(Title)),
            ]),
            default: (kind: Property(Filename))
        ),
    ],
    lyrics: (
        timestamp: false
    )
)
